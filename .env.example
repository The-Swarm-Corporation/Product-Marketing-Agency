# Product Marketing Agency Environment Configuration
# Copy this file to .env and fill in your actual API keys

# ============================================
# LLM Provider API Keys (Choose at least one)
# ============================================

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
# Optional: Specific OpenAI model to use
# OPENAI_MODEL=gpt-4o

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
# Optional: Specific Claude model to use
# ANTHROPIC_MODEL=claude-3-sonnet

# Google Gemini Configuration
GEMINI_API_KEY=your_google_api_key_here
# Optional: Specific Gemini model to use
# GEMINI_MODEL=gemini-2.0-flash

# ============================================
# Model Configuration
# ============================================

# Default model to use (can be overridden in code)
MODEL_NAME=gpt-4o
# Options: gpt-4o, gpt-4o-mini, claude-3-sonnet, gemini-2.0-flash

# Model parameters
TEMPERATURE=0.1  # 0.0-1.0, lower = more deterministic
MAX_TOKENS=4000  # Maximum tokens per generation
MAX_RETRIES=3    # Maximum retry attempts for failed operations

# ============================================
# Output Configuration
# ============================================

# Base directory for all outputs
OUTPUT_DIR=./output

# Image settings
IMAGE_FORMAT=png  # png, jpg, webp
IMAGE_QUALITY=high  # low, medium, high
IMAGE_RESOLUTION=1024x1024  # Resolution for generated images

# ============================================
# Application Settings
# ============================================

# Logging and debugging
VERBOSE=false  # Set to true for detailed logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=./logs/marketing_agency.log

# UI Configuration
RICH_TRACEBACK=true  # Enhanced error messages
CONSOLE_WIDTH=120    # Terminal width for Rich UI
SHOW_PROGRESS=true   # Show progress bars during generation

# Performance
BATCH_SIZE=5  # Number of images to process in parallel
TIMEOUT=120   # Timeout in seconds for each image generation

# ============================================
# Advanced Configuration
# ============================================

# Cache settings
ENABLE_CACHE=true  # Cache agent responses
CACHE_DIR=./cache  # Directory for cache files
CACHE_TTL=3600    # Cache time-to-live in seconds

# Retry configuration
RETRY_DELAY=5      # Initial delay between retries (seconds)
RETRY_BACKOFF=2    # Exponential backoff multiplier
MAX_RETRY_DELAY=60 # Maximum delay between retries (seconds)

# Agent configuration
AGENT_TIMEOUT=60   # Timeout for individual agent operations
AGENT_MEMORY=true  # Enable agent conversation memory

# ============================================
# Feature Flags
# ============================================

# Enable/disable specific features
ENABLE_INTERACTIVE_MODE=true  # Allow interactive menu
ENABLE_BATCH_PROCESSING=true  # Allow batch campaign processing
ENABLE_AUTO_SAVE=true         # Auto-save campaign reports
ENABLE_IMAGE_VALIDATION=true  # Validate generated images

# ============================================
# Development Settings (Optional)
# ============================================

# Development mode settings
DEV_MODE=false  # Enable development mode
MOCK_AGENTS=false  # Use mock agents for testing
DRY_RUN=false  # Run without actually generating images

# API endpoints (if using custom deployments)
# CUSTOM_API_BASE=https://your-api-endpoint.com
# CUSTOM_API_VERSION=v1